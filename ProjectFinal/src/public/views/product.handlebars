{{!-- https://www.bootdey.com/snippets/view/bs4-product-detail --}}

<div class="container mt-3">
  <div class="card p-3">
    <div class="card-body">
      <h3 class="card-title">{{title}}</h3>
      <div class="row">
        <div class="col-lg-4">
          <img src="https://www.bootdey.com/image/400x400/008B8B/000000" class="img-fluid">
        </div>
        <div class="col-lg-5">
          <h6 class="box-title">Descripci√≥n del producto</h6>
          <p>{{description}}</p>
        </div>
        <div class="col-lg-2">
          <h2>$ {{price}} </h2>
          <span>Hay {{stock}} unidades disponbiles</span>
        </div>
        <div class="col-lg-1">

          <a onclick="addToCart('{{_id}}')" class="btn btn-info btn-rounded mr-1 float-right">
            <i class="bi bi-cart"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <a href="/" class="btn btn-link text-muted"> <i class="bi bi-arrow-left me-1"></i>Volver</a>

    </div>
  </div>
</div>
<script>
  function addToCart(id) {   
    fetch(`/carts/{{user.cartId}}/products/${id}`, {
      method: 'POST',
      headers: {
        "Content-Type": "application/json",
      }
    })
    .then(response => response.json()
      .then(data => {
          // Handle the response data
          console.log(data)
      })
    )
    .catch(error => {
        // Handle errors
        console.error('Error:', error);
    });
  };
</script>