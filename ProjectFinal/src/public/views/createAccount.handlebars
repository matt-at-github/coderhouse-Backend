<link rel="stylesheet" href="../css/createAccount.css">

<div class="container mt-3 pt-5" style="max-width: 40%;">

  <div class="row text-center p-4" style="background-color: #e1e1e1;">

    <form class="col-12 form-login" role="form" method="POST" action="/users/createAccount" target="hiddenFrame">

      <div class="row justify-content-center text-center">
        <div class="col-10 reg-icon">
          <span class="fa-2x"><icon class="fa fa-user fa-2x"></icon> Crear cuenta</span>
        </div>
      </div>

      <div class="row justify-content-center pt-4">
        <div class="col-4">
          <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Nombre">
        </div>
        <div class="col-4">
          <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Apellido">
        </div>
        <div class="col-4">
          <input type="number" class="form-control" id="age" name="age" placeholder="Edad">
        </div>
      </div>

      <div class="row justify-content-center ">
        <div class="col-12">
          <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrÃ³nico">
        </div>
      </div>

      <div class="row justify-content-center ">
        <div class="col-12">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
      </div>

      <div class="row justify-content-center pt-4">
        <div class="col-10">
          <button type="submit" class="btn btn-info">
            <span class="glyphicon glyphicon-share-alt"></span>
            Registrarme
          </button>
        </div>
      </div>

    </form>

  </div>
  <iframe name="hiddenFrame" id="hiddenFrame" style="display: none;"></iframe>
</div>
